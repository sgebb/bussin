@page "/user"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>User - bussin</PageTitle>

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h2 class="mb-4">User Settings</h2>
            
            <!-- User Info Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Account</h5>
                </div>
                <div class="card-body">
                    @if (authState != null && authState.User.Identity?.IsAuthenticated == true)
                    {
                        var nameClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "name")?.Value;
                        var emailClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "emails" || c.Type == "email")?.Value;
                        var preferredUsername = authState.User.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value;
                        
                        @if (!string.IsNullOrEmpty(nameClaim))
                        {
                            <p class="mb-0"><strong>Name:</strong> @nameClaim</p>
                        }
                        @if (!string.IsNullOrEmpty(emailClaim))
                        {
                            <p class="mb-0"><strong>Email:</strong> @emailClaim</p>
                        }
                        else if (!string.IsNullOrEmpty(preferredUsername))
                        {
                            <p class="mb-0"><strong>Username:</strong> @preferredUsername</p>
                        }
                        else if (!string.IsNullOrEmpty(authState.User.Identity?.Name))
                        {
                            <p class="mb-0"><strong>User:</strong> @authState.User.Identity?.Name</p>
                        }
                    }

                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted mb-3">Organization</h6>
                        @if (AuthService.IsDemoMode)
                        {
                            <div class="alert alert-light border small">
                                <i class="bi bi-info-circle me-2"></i> Tenant switching is disabled in <strong>Demo Mode</strong>.
                            </div>
                        }
                        else
                        {
                            <TenantSelector />
                        }
                    </div>
                </div>
            </div>

            <!-- API Permissions Card -->
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> API Permissions</h5>
                    @if (AuthService.IsDemoMode)
                    {
                         <span class="badge bg-success">Demo Active</span>
                    }
                    else if (!isCheckingConsent)
                    {
                        <button class="btn btn-outline-primary btn-sm" @onclick="CheckConsent">
                            <i class="bi bi-arrow-clockwise"></i> Refresh Status
                        </button>
                    }
                    else
                    {
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                    }
                </div>
                <div class="card-body">
                    @if (AuthService.IsDemoMode)
                    {
                        <p class="text-success small mb-0"><i class="bi bi-check-circle-fill"></i> All permissions are simulated for the demonstration.</p>
                    }
                    else if (consentStatus != null)
                    {
                        <div class="list-group list-group-flush mb-3">
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <h6 class="mb-0">Azure Management API</h6>
                                    <small class="text-muted">Required to list your Service Bus namespaces.</small>
                                </div>
                                <i class="bi @(consentStatus.HasArmManagement ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") fs-5"></i>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <h6 class="mb-0">Service Bus Data API</h6>
                                    <small class="text-muted">Required for sending/receiving messages.</small>
                                </div>
                                <i class="bi @(consentStatus.HasServiceBus ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") fs-5"></i>
                            </div>
                        </div>

                        @if (!consentStatus.HasArmManagement || !consentStatus.HasServiceBus)
                        {
                            <div class="alert alert-info py-2 small">
                                <i class="bi bi-info-circle me-1"></i> Missing permissions? You'll be prompted to grant them on the Home page.
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted small">Click "Refresh Status" to check your current permission state.</p>
                    }
                </div>
            </div>

            <!-- Troubleshooting Card -->
            @if (!AuthService.IsDemoMode)
            {
                <div class="card border-warning mb-3">
                    <div class="card-header bg-warning-subtle text-warning-emphasis">
                        <h5 class="mb-0 small fw-bold"><i class="bi bi-tools"></i> Troubleshooting & Testing</h5>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-3">Use these tools to verify authentication behavior or fix stuck sessions.</p>
                        
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-warning btn-sm text-start" @onclick="ClearAppCache">
                                <i class="bi bi-trash-fill me-2"></i> Clear Local Cache & Preferences
                                <div class="x-small text-muted ms-4">Forces the app to treat you as a first-time user (keeps you logged into MSAL).</div>
                            </button>
                            
                            <button class="btn btn-outline-secondary btn-sm text-start" @onclick="GoToHomeForceConsent">
                                <i class="bi bi-shield-lock-fill me-2"></i> Force Re-authentication Flow
                                <div class="x-small text-muted ms-4">Goes back to Home page to trigger the permission check and popup logic.</div>
                            </button>
                            <button class="btn btn-outline-danger btn-sm text-start" @onclick="NuclearClearMsal">
                                <i class="bi bi-exterminator me-2"></i> Hard Clear MSAL Session
                                <div class="x-small text-muted ms-4">Clears the browser's authentication cache. Use this if you get "Matching Token" errors or switching tenants fails.</div>
                            </button>
                        </div>
                    </div>
                </div>
            }

            <!-- Logout Card -->
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <span class="text-muted small">
                        @(AuthService.IsDemoMode ? "Sign out is disabled in Demo Mode." : "End your current session across all tenants.")
                    </span>
                    <button class="btn btn-outline-danger" @onclick="BeginLogout" disabled="@AuthService.IsDemoMode">
                        <i class="bi bi-box-arrow-right"></i> Sign Out
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@inject IPreferencesService PreferencesService

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private AuthenticationState? authState;
    private ConsentStatus? consentStatus;
    private bool isCheckingConsent = false;

    protected override async Task OnInitializedAsync()
    {
        if (AuthenticationStateTask != null)
        {
            authState = await AuthenticationStateTask;
        }
        
        // Auto-check on load to show status
        await CheckConsent();
    }

    private async Task CheckConsent()
    {
        isCheckingConsent = true;
        consentStatus = new ConsentStatus();
        StateHasChanged();

        try
        {
            // Check Service Bus token
            var sbToken = await AuthService.GetServiceBusTokenAsync();
            consentStatus.HasServiceBus = !string.IsNullOrEmpty(sbToken);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Service Bus token check error: {ex.Message}");
            consentStatus.HasServiceBus = false;
        }

        try
        {
            // Check ARM Management token
            var mgmtCred = await AuthService.GetTokenCredentialAsync();
            consentStatus.HasArmManagement = mgmtCred != null;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ARM Management token check error: {ex.Message}");
            consentStatus.HasArmManagement = false;
        }

        isCheckingConsent = false;
        StateHasChanged();
    }

    private async Task ClearAppCache()
    {
        try
        {
            // Clear preferences (selected tenant, folders, dark mode, etc.)
            await PreferencesService.ClearPreferencesAsync();
            
            // Note: We don't clear MSAL cache here (localStorage) as that would sign the user out completely.
            // But clearing preferences will reset the SelectedTenantId, forcing the Home page to reload in a clean state.
            
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error clearing cache: {ex.Message}");
        }
    }

    private async Task NuclearClearMsal()
    {
        try
        {
            await AuthService.ClearMsalCacheAsync();
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error during nuclear clear: {ex.Message}");
        }
    }

    private void GoToHomeForceConsent()
    {
        // Simply navigate to home. Since CheckPermissions runs on Home.razor load, 
        // it will see missing tokens and show the logic.
        Navigation.NavigateTo("/");
    }

    private void BeginLogout()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }

    private class ConsentStatus
    {
        public bool HasServiceBus { get; set; }
        public bool HasArmManagement { get; set; }
    }
}

            _messageListRef?.ClearSelection();

            // Start of replacement logic
            string entityName = _state.IsQueueSelected ? $"queue '{selectedQueueName}'" : 
                                _state.IsSubscriptionSelected ? $"subscription '{selectedTopicName}/Subscriptions/{selectedSubscriptionName}'" : "entity";

            string notificationMsg;
            switch (operationName)
            {
                case "delete":
                    notificationMsg = $"Deleted {sequenceNumbers.Count} messages from {entityName}";
                    break;
                case "resubmit":
                    notificationMsg = $"Resubmitted {sequenceNumbers.Count} messages to {entityName}";
                    break;
                case "move to Dead Letter Queue":
                    notificationMsg = $"Moved {sequenceNumbers.Count} messages from {entityName} to Dead Letter Queue";
                    break;
                default:
                    notificationMsg = $"{operationName} {sequenceNumbers.Count} messages regarding {entityName}";
                    break;
            }
            
            NotificationService.NotifySuccess(notificationMsg);
            ConfirmModal.Close();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to {operationName} messages: {ex.Message}";
            Console.WriteLine($"{operationName} error details: {ex}");
        }
        finally
        {
            ConfirmModal.IsProcessing = false;
        }
    }

    // Single message operations
    private void DeleteSingleMessage(long sequenceNumber)
    {
        CloseMessageDetail();
        DeleteMessages(new List<long> { sequenceNumber });
    }

    private void ResubmitSingleMessage(long sequenceNumber)
    {
        CloseMessageDetail();
        ResubmitMessages(new List<long> { sequenceNumber });
    }

    private void MoveToDLQSingleMessage(long sequenceNumber)
    {
        CloseMessageDetail();
        MoveToDLQMessages(new List<long> { sequenceNumber });
    }

    private async Task PeekWithOptions((int maxCount, long fromSequenceNumber) options)
    {
        showPeekOptionsModal = false;
        isPeeking = true;
        errorMessage = null;
        hasPeeked = true;
        peekedMessages.Clear();

        try
        {
            var token = await AuthService.GetServiceBusTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Service Bus token not available";
                return;
            }

            List<ServiceBusMessage> messages;
            if (selectedQueueName != null)
            {
                messages = await JsInterop.PeekQueueMessagesAsync(NamespaceNameOnly, selectedQueueName, token, options.maxCount, (int)options.fromSequenceNumber, isViewingDLQ);
            }
            else if (selectedTopicName != null && selectedSubscriptionName != null)
            {
                messages = await JsInterop.PeekSubscriptionMessagesAsync(NamespaceNameOnly, selectedTopicName, selectedSubscriptionName, token, options.maxCount, (int)options.fromSequenceNumber, isViewingDLQ);
            }
            else
            {
                messages = new List<ServiceBusMessage>();
            }

            peekedMessages = messages;
            peekFromSequence = messages.Any() ? (int)(messages.Max(m => m.SequenceNumber ?? 0) + 1) : 0;

            if (messages.Count > 0)
            {
                NotificationService.NotifySuccess($"Peeked {messages.Count} messages");
            }
            else
            {
                NotificationService.NotifyInfo("No messages found");
            }
        }
        catch (Exception ex)
        {
            errorMessage = FormatPeekError(ex.Message);
            Console.WriteLine($"Peek error: {ex}");
        }
        finally
        {
            isPeeking = false;
        }
    }


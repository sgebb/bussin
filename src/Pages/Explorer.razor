            else if (selectedTopicName != null)
            {
                await JsInterop.SendScheduledTopicMessageAsync(NamespaceNameOnly, selectedTopicName, token, bodyToSend, messageData.scheduledTime, propsDict);
            }

            showSendMessageModal = false;

    private async Task ExecutePurgeMessages()
    {
        ConfirmModal.IsProcessing = true;
        ConfirmModal.ProgressCount = 0;
        errorMessage = null;

        try
        {
            var token = await AuthService.GetServiceBusTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Service Bus token not available";
                return;
            }

            // Create progress callback
            var callback = new PurgeProgressCallback(count =>
            {
                ConfirmModal.ProgressCount = count;
                InvokeAsync(StateHasChanged);
            });
            _purgeCallbackRef = DotNetObjectReference.Create(callback);

            // Start purge with progress tracking
            _purgeController = await StartPurgeAsync(token);

            // Wait for completion
            if (_purgeController != null)
            {
                var finalCount = await JsInterop.JSRuntime.InvokeAsync<int>("awaitControllerPromise", _purgeController);
                NotificationService.NotifySuccess($"Purged {finalCount} messages");
            }

            peekedMessages.Clear();
            peekFromSequence = 0;
            CloseConfirmModal();
        }
        catch (Exception ex)
        {
            rawErrorMessage = ex.Message;
            errorMessage = FormatPurgeError(ex.Message);
            Console.WriteLine($"Purge error: {ex}");
        }
        finally
        {
            ConfirmModal.IsProcessing = false;
            ConfirmModal.ProgressCount = null;
            _purgeCallbackRef?.Dispose();
            _purgeCallbackRef = null;
            _purgeController = null;
        }

@page "/explorer"
@using Microsoft.AspNetCore.Authorization
@using Azure.Core
@attribute [Authorize]
@inject IAuthenticationService AuthService
@inject IAzureResourceService ResourceService
@inject IServiceBusOperationsService OperationsService
@inject IServiceBusJsInteropService JsInterop
@inject IMessageParsingService MessageParsingService
@inject NavigationManager Navigation
@inject NavigationStateService NavState
@inject BackgroundPurgeService BackgroundPurge
@inject INotificationService NotificationService
@inject IConfirmModalService ConfirmModal
@implements IDisposable

<PageTitle>Explorer - bussin</PageTitle>

<div class="explorer-layout">
    <!-- Section 1: Compact Header -->
    <div class="explorer-header">
        <div class="d-flex align-items-center gap-2">
            <h1 class="explorer-namespace-title mb-0">@displayName</h1>
            <button class="favorite-toggle-btn @(NavState.IsFavorite(NamespaceParam ?? "") ? "favorited" : "not-favorited")" 
                    @onclick="() => ToggleFavorite()" 
                    title="@(NavState.IsFavorite(NamespaceParam ?? "") ? "Remove from favorites" : "Add to favorites")">
                @(NavState.IsFavorite(NamespaceParam ?? "") ? "★" : "☆")
            </button>
            @if (isLoadingEntities)
            {
                <div class="spinner-border spinner-border-sm text-muted" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            }
            else
            {
                <button class="refresh-btn" @onclick="RefreshEntities" title="Refresh queues and topics">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            }
        </div>
    </div>

    <!-- Section 2: Compact Entity Selector (3 Columns) -->
    @if (queues.Count > 0 || topics.Count > 0)
    {
        <div class="explorer-entities">
            <div class="explorer-entities-grid-3col">
                <!-- Queues Column -->
                <div class="entity-column">
                    <div class="entity-column-header">
                        <i class="bi bi-list-ul"></i> Queues (@queues.Count)
                    </div>
                    <div class="entity-list-scroll">
                        @foreach (var queue in queues)
                        {
                            <div class="entity-item @(selectedQueueName == queue.Name ? "active" : "") @(queue.Status != "Active" ? "entity-disabled" : "")" @onclick="() => SelectQueue(queue.Name)">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="entity-name-with-icons">
                                        @queue.Name
                                        <span class="entity-icons">
                                            @if (queue.Status != "Active")
                                            {
                                                <i class="bi bi-pause-circle" title="Status: @queue.Status"></i>
                                            }
                                            @if (queue.RequiresSession)
                                            {
                                                <i class="bi bi-person-badge" title="Session-enabled"></i>
                                            }
                                            @if (queue.EnablePartitioning)
                                            {
                                                <i class="bi bi-grid-3x3" title="Partitioned"></i>
                                            }
                                            @if (queue.RequiresDuplicateDetection)
                                            {
                                                <i class="bi bi-copy" title="Duplicate detection enabled"></i>
                                            }
                                            @if (!string.IsNullOrEmpty(queue.ForwardTo))
                                            {
                                                <i class="bi bi-arrow-right-circle" title="Forwards to: @queue.ForwardTo"></i>
                                            }
                                        </span>
                                    </span>
                                    @if (queue.ActiveMessageCount > 0 || queue.DeadLetterMessageCount > 0)
                                    {
                                        <span class="badge bg-secondary">@queue.ActiveMessageCount / @queue.DeadLetterMessageCount</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Topics Column -->
                <div class="entity-column">
                    <div class="entity-column-header">
                        <i class="bi bi-broadcast"></i> Topics (@topics.Count)
                    </div>
                    <div class="entity-list-scroll">
                        @foreach (var topic in topics)
                        {
                            <div class="entity-item @(selectedTopicName == topic.Name ? "active" : "")" @onclick="() => SelectTopic(topic.Name)">
                                <div>@topic.Name</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Subscriptions Column -->
                <div class="entity-column">
                    <div class="entity-column-header">
                        <i class="bi bi-envelope"></i> Subscriptions (@subscriptions.Count)
                    </div>
                    <div class="entity-list-scroll">
                        @if (isLoadingSubscriptions)
                        {
                            <div class="text-center p-2">
                                <div class="spinner-border spinner-border-sm"></div>
                            </div>
                        }
                        else if (selectedTopicName == null)
                        {
                            <div class="text-center p-3 text-muted small">
                                Select a topic
                            </div>
                        }
                        else
                        {
                            @foreach (var sub in subscriptions)
                            {
                                <div class="entity-item @(selectedSubscriptionName == sub.Name ? "active" : "") @(sub.Status != "Active" ? "entity-disabled" : "")" @onclick="() => SelectSubscription(sub.Name)">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="entity-name-with-icons">
                                            @sub.Name
                                            <span class="entity-icons">
                                                @if (sub.Status != "Active")
                                                {
                                                    <i class="bi bi-pause-circle" title="Status: @sub.Status"></i>
                                                }
                                                @if (sub.RequiresSession)
                                                {
                                                    <i class="bi bi-person-badge" title="Session-enabled"></i>
                                                }
                                                @if (!string.IsNullOrEmpty(sub.ForwardTo))
                                                {
                                                    <i class="bi bi-arrow-right-circle" title="Forwards to: @sub.ForwardTo"></i>
                                                }
                                            </span>
                                        </span>
                                        @if (sub.ActiveMessageCount > 0 || sub.DeadLetterMessageCount > 0)
                                        {
                                            <span class="badge bg-secondary">@sub.ActiveMessageCount / @sub.DeadLetterMessageCount</span>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Section 3: Messages (Takes Majority of Space) -->
    <div class="explorer-messages">
        <div class="explorer-messages-header">
            <!-- Header removed - just the message list -->
        </div>

        <div class="explorer-messages-content">
            <div class="explorer-messages-main">
                @if (SelectedEntityRequiresSession)
                {
                    <div class="session-warning-banner">
                        <i class="bi bi-info-circle me-1"></i>
                        <span><strong>Session-enabled.</strong> Send requires Session ID. Delete/Purge not supported.</span>
                    </div>
                }
                <div class="explorer-messages-list">
                @if (peekedMessages.Count > 0)
                {
                    <MessageList @ref="_messageListRef"
                                Messages="@peekedMessages"
                                IsDLQ="@isViewingDLQ"
                                IsProcessing="@isProcessingBatch"
                                RequiresSession="@SelectedEntityRequiresSession"
                                OnMessageSelected="@ShowMessageDetail"
                                OnDeleteMessages="@DeleteMessages"
                                OnResubmitMessages="@ResubmitMessages"
                                OnMoveToDLQMessages="@MoveToDLQMessages" />
                }
                else if (selectedQueueName != null || selectedSubscriptionName != null)
                {
                    <div class="text-center text-muted p-4">
                        <p>@(hasPeeked ? "No messages found" : "Click 'Peek' to load messages")</p>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted p-4">
                        <p>Select a queue or topic subscription to view messages</p>
                    </div>
                }
                </div>
            </div>

            <div class="explorer-actions-sidebar">
                <!-- DLQ Toggle - always visible -->
                <div class="action-btn-group dlq-toggle-group @(isViewingDLQ ? "dlq-active" : "")">
                    <button class="dlq-toggle-btn @(isViewingDLQ ? "active" : "") @(!HasQueueOrSubscriptionSelected ? "disabled-grey" : "")" 
                            @onclick="ToggleDLQ"
                            disabled="@(!HasQueueOrSubscriptionSelected)"
                            title="@(HasQueueOrSubscriptionSelected ? (isViewingDLQ ? "Viewing Dead Letter Queue" : "Switch to Dead Letter Queue") : "Select a queue or subscription first")">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span>Dead Letter Queue</span>
                        <span class="dlq-checkbox @(isViewingDLQ ? "checked" : "")">
                            @if (isViewingDLQ)
                            {
                                <i class="bi bi-check-square-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-square"></i>
                            }
                        </span>
                    </button>
                </div>

                <!-- Actions - always visible -->
                <div class="action-btn-group">
                    <div class="action-btn-group-title">Actions</div>
                    <button class="btn btn-action btn-success w-100 @(!CanSend ? "disabled-grey" : "")" 
                            @onclick="ShowSendMessageModal" 
                            disabled="@(!CanSend)">
                        <i class="bi bi-envelope"></i> Send
                    </button>
                    <div class="d-flex gap-1">
                        <button class="btn btn-action btn-primary flex-grow-1 @(!HasQueueOrSubscriptionSelected || isPeeking ? "disabled-grey" : "")" 
                                @onclick="@(peekedMessages.Count > 0 ? PeekNext : PeekMessages)" 
                                disabled="@(!HasQueueOrSubscriptionSelected || isPeeking)">
                            <i class="bi bi-search"></i> @(peekedMessages.Count > 0 ? "Peek More" : "Peek")
                        </button>
                        <button class="btn btn-action btn-outline-primary peek-options-btn @(!HasQueueOrSubscriptionSelected ? "disabled-grey" : "")" 
                                @onclick="ShowPeekOptionsModal"
                                disabled="@(!HasQueueOrSubscriptionSelected)"
                                title="Peek with options">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                    </div>
                    <button class="btn btn-action btn-info w-100 @(!HasQueueOrSubscriptionSelected ? "disabled-grey" : "")" 
                            @onclick="ShowMonitorModal"
                            disabled="@(!HasQueueOrSubscriptionSelected)">
                        <i class="bi bi-graph-up"></i> Monitor
                    </button>
                </div>

                <!-- Dangerous Actions - always visible -->
                <div class="action-btn-group">
                    <div class="action-btn-group-title">Dangerous</div>
                    <button class="btn btn-action btn-danger w-100 @(!HasQueueOrSubscriptionSelected || isPurging || SelectedEntityRequiresSession ? "disabled-grey" : "")" 
                            @onclick="() => PurgeMessages()" 
                            disabled="@(!HasQueueOrSubscriptionSelected || isPurging || SelectedEntityRequiresSession)"
                            title="@(SelectedEntityRequiresSession ? "Purge not supported for session-enabled entities" : "Purge all messages")">
                        <i class="bi bi-trash"></i> Purge All
                    </button>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible alert-sm mt-2" style="max-height: 120px; overflow-y: auto;">
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                <strong>Error:</strong> @errorMessage
            </div>
        }
    </div>
</div>

<!-- Modals -->
<SendMessageModal IsVisible="@showSendMessageModal"
                 IsSending="@isSending"
                 RequiresSession="@SelectedEntityRequiresSession"
                 OnClose="@(() => showSendMessageModal = false)"
                 OnSend="@SendMessage" />

<MessageDetailModal IsVisible="@showMessageDetailModal"
                   Message="@selectedMessage"
                   IsDLQ="@isViewingDLQ"
                   IsProcessing="@isProcessingBatch"
                   RequiresSession="@SelectedEntityRequiresSession"
                   OnClose="@CloseMessageDetail"
                   OnDelete="@DeleteSingleMessage"
                   OnResubmit="@ResubmitSingleMessage"
                   OnMoveToDLQ="@MoveToDLQSingleMessage" />

<PeekLockModal IsVisible="@showPeekLockModal"
              IsProcessing="@isPeeking"
              InitialCount="@peekLockCount"
              InitialDuration="@peekLockDuration"
              OnClose="@(() => showPeekLockModal = false)"
              OnPeekLock="@PeekLockMessagesWithSettings" />

<PeekOptionsModal IsVisible="@showPeekOptionsModal"
                  OnClose="@(() => showPeekOptionsModal = false)"
                  OnPeek="@PeekWithOptions" />

<MessageMonitorModal IsVisible="@showMonitorModal"
                    NamespaceName="@NamespaceNameOnly"
                    QueueName="@selectedQueueName"
                    TopicName="@selectedTopicName"
                    SubscriptionName="@selectedSubscriptionName"
                    OnClose="@(() => showMonitorModal = false)" />

<ReceiveAndLockModal IsVisible="@showReceiveAndLockModal"
                    OnClose="@(() => showReceiveAndLockModal = false)"
                    OnLockMessages="@LockMessagesForModal" />

<ConfirmModal IsVisible="@ConfirmModal.IsVisible"
             Title="@ConfirmModal.Title"
             Message="@ConfirmModal.Message"
             DetailMessage="@ConfirmModal.DetailMessage"
             ConfirmButtonText="@ConfirmModal.ConfirmButtonText"
             ConfirmButtonClass="@ConfirmModal.ConfirmButtonClass"
             AlternativeConfirmButtonText="@ConfirmModal.AlternativeButtonText"
             AlternativeConfirmButtonClass="@ConfirmModal.AlternativeButtonClass"
             IsProcessing="@ConfirmModal.IsProcessing"
             ProgressCount="@ConfirmModal.ProgressCount"
             OnConfirm="@OnConfirmModalConfirm"
             OnAlternativeConfirm="@OnConfirmModalAlternativeConfirm"
             OnCancel="@OnConfirmModalCancel">
    @if (isResubmitModal)
    {
        <div class="form-check mt-3">
            <input class="form-check-input" type="checkbox" id="removeFromDlq" @bind="resubmitRemoveFromDLQ">
            <label class="form-check-label" for="removeFromDlq">Remove from Dead Letter Queue</label>
        </div>
    }
</ConfirmModal>

@code {
    [SupplyParameterFromQuery(Name = "namespace")]
    public string? NamespaceParam { get; set; }
    
    [SupplyParameterFromQuery(Name = "rg")]
    public string? ResourceGroupParam { get; set; }
    
    [SupplyParameterFromQuery(Name = "sub")]
    public string? SubscriptionIdParam { get; set; }
    
    [SupplyParameterFromQuery(Name = "name")]
    public string? NameParam { get; set; }

    // Entity state
    private readonly ExplorerState _state = new();
    private Dictionary<string, ServiceBusQueueInfo> queueDict = new();
    private Dictionary<string, ServiceBusTopicInfo> topicDict = new();
    private Dictionary<string, ServiceBusSubscriptionInfo> subscriptionDict = new();
    
    private List<ServiceBusQueueInfo> queues => queueDict.Values.OrderBy(q => q.Name).ToList();
    private List<ServiceBusTopicInfo> topics => topicDict.Values.OrderBy(t => t.Name).ToList();
    private List<ServiceBusSubscriptionInfo> subscriptions => subscriptionDict.Values.OrderBy(s => s.Name).ToList();
    
    // Convenience accessors for state
    private string? selectedQueueName => _state.SelectedQueueName;
    private string? selectedTopicName => _state.SelectedTopicName;
    private string? selectedSubscriptionName => _state.SelectedSubscriptionName;
    private bool isViewingDLQ { get => _state.IsViewingDLQ; set => _state.IsViewingDLQ = value; }
    private string? _loadedSubscriptionsForTopic;
    
    // Message state
    private List<ServiceBusMessage> peekedMessages = new();
    private bool hasPeeked = false;
    private int peekCount = 50;
    private int peekFromSequence = 0;
    
    // Modal state
    private bool resubmitRemoveFromDLQ = true;
    private bool isResubmitModal = false;
    private bool showSendMessageModal = false;
    private bool showMessageDetailModal = false;
    private bool showPeekLockModal = false;
    private bool showMonitorModal = false;
    private bool showReceiveAndLockModal = false;
    private bool showPeekOptionsModal = false;
    private ServiceBusMessage? selectedMessage = null;
    private int peekLockCount = 10;
    private int peekLockDuration = 30;
    
    // Loading/processing state
    private bool isLoadingEntities = false;
    private bool isLoadingSubscriptions = false;
    private bool isPeeking = false;
    private bool isPurging = false;
    private bool isSending = false;
    private bool isProcessingBatch = false;
    private CancellationTokenSource? _loadCts;
    
    // Purge state
    private IJSObjectReference? _purgeController;
    private DotNetObjectReference<PurgeProgressCallback>? _purgeCallbackRef;
    
    // UI refs
    private MessageList? _messageListRef;
    private string? errorMessage;
    private string displayName = "";
    
    // Computed properties
    private string NamespaceNameOnly => _state.NamespaceNameOnly;
    private bool HasEntitySelected => _state.HasEntitySelected;
    private bool HasQueueOrSubscriptionSelected => _state.HasQueueOrSubscriptionSelected;
    private bool CanSend => HasEntitySelected && !isViewingDLQ;
    private bool SelectedEntityRequiresSession => 
        (selectedQueueName != null && queueDict.TryGetValue(selectedQueueName, out var q) && q.RequiresSession) ||
        (selectedSubscriptionName != null && subscriptionDict.TryGetValue(selectedSubscriptionName, out var s) && s.RequiresSession);

    private string? _lastNamespace;
    
    protected override void OnInitialized()
    {
        ConfirmModal.OnChange += StateHasChanged;
    }
    
    public void Dispose()
    {
        ConfirmModal.OnChange -= StateHasChanged;
        _loadCts?.Cancel();
        _loadCts?.Dispose();
        _purgeCallbackRef?.Dispose();
    }

    protected override async Task OnParametersSetAsync()
    {
        // Only reload if the namespace actually changed
        if (!string.IsNullOrEmpty(NamespaceParam) && NamespaceParam != _lastNamespace)
        {
            _lastNamespace = NamespaceParam;
            
            _state.SetNamespace(new ServiceBusNamespaceInfo
            {
                Name = NamespaceParam?.Split('.').FirstOrDefault() ?? "",
                FullyQualifiedNamespace = NamespaceParam ?? "",
                ResourceGroup = ResourceGroupParam ?? "",
                SubscriptionId = SubscriptionIdParam ?? ""
            });
            
            peekedMessages.Clear();
            hasPeeked = false;
            peekFromSequence = 0;
            
            // Clear all entity dictionaries when switching namespaces
            queueDict.Clear();
            topicDict.Clear();
            subscriptionDict.Clear();
            
            // Initialize display name
            if (!string.IsNullOrEmpty(NamespaceParam))
            {
                var connection = NavState.GetNamespaceConnection(NamespaceParam);
                if (connection != null)
                {
                    displayName = connection.DisplayName;
                }
                else
                {
                    displayName = NameParam ?? "";
                }
            }
            
            await LoadEntitiesAsync();
        }
    }

    private async Task ToggleFavorite()
    {
        if (string.IsNullOrEmpty(NamespaceParam)) return;

        if (NavState.IsFavorite(NamespaceParam))
        {
            await NavState.RemoveFromFavoritesAsync(NamespaceParam);
        }
        else
        {
            if (string.IsNullOrEmpty(ResourceGroupParam) || string.IsNullOrEmpty(SubscriptionIdParam))
            {
                errorMessage = "Cannot add to favorites: missing resource group or subscription information";
                return;
            }
            
            await NavState.AddToFavoritesAsync(NamespaceParam, ResourceGroupParam, SubscriptionIdParam, displayName);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        if (_state.CurrentNamespace == null) return;
        
        _loadCts?.Cancel();
        _loadCts = new CancellationTokenSource();

        isLoadingEntities = true;
        errorMessage = null;

        try
        {
            var credential = await AuthService.GetTokenCredentialAsync();
            if (credential == null)
            {
                errorMessage = "Failed to get authentication token";
                isLoadingEntities = false;
                return;
            }

            await Task.WhenAll(
                LoadQueuesAsync(credential, _state.CurrentNamespace),
                LoadTopicsAsync(credential, _state.CurrentNamespace)
            );
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load entities: {ex.Message}";
        }
        finally
        {
            isLoadingEntities = false;
            StateHasChanged();
        }
    }

    private async Task RefreshEntities()
    {
        // Clear existing data and reload
        queueDict.Clear();
        topicDict.Clear();
        subscriptionDict.Clear();
        _loadedSubscriptionsForTopic = null;
        
        await LoadEntitiesAsync();
        
        // Reload subscriptions if a topic is selected
        if (selectedTopicName != null)
        {
            await LoadSubscriptionsAsync(selectedTopicName);
        }
        
        NotificationService.NotifySuccess("Refreshed queues and topics");
    }

    private async Task LoadQueuesAsync(TokenCredential credential, ServiceBusNamespaceInfo namespaceInfo)
    {
        var ct = _loadCts?.Token ?? CancellationToken.None;
        
        try
        {
            await foreach (var queue in ResourceService.ListQueuesAsync(credential, namespaceInfo, ct))
            {
                if (ct.IsCancellationRequested) break;
                queueDict[queue.Name] = queue;
                StateHasChanged();
            }
        }
        catch (OperationCanceledException) { }
    }

    private async Task LoadTopicsAsync(TokenCredential credential, ServiceBusNamespaceInfo namespaceInfo)
    {
        var ct = _loadCts?.Token ?? CancellationToken.None;
        
        try
        {
            await foreach (var topic in ResourceService.ListTopicsAsync(credential, namespaceInfo, ct))
            {
                if (ct.IsCancellationRequested) break;
                topicDict[topic.Name] = topic;
                StateHasChanged();
            }
        }
        catch (OperationCanceledException) { }
    }

    private void SelectQueue(string queueName)
    {
        _state.SelectQueue(queueName);
        ResetMessageState();
    }

    private async Task SelectTopic(string topicName)
    {
        _state.SelectTopic(topicName);
        ResetMessageState();
        
        // Reset DLQ when switching to topic (since topics don't have DLQ, only subscriptions do)
        isViewingDLQ = false;
        
        // Only clear subscriptions if switching to a different topic
        if (_loadedSubscriptionsForTopic != topicName)
        {
            subscriptionDict.Clear();
            _loadedSubscriptionsForTopic = null;
        }
        
        await LoadSubscriptionsAsync(topicName);
    }

    private async Task LoadSubscriptionsAsync(string topicName)
    {
        if (_state.CurrentNamespace == null) return;
        
        // Cancel any previous subscription loading
        _loadCts?.Cancel();
        _loadCts = new CancellationTokenSource();
        var ct = _loadCts.Token;
        
        // Show loading spinner
        isLoadingSubscriptions = true;
        
        // Clear subscriptions if loading for a different topic
        if (_loadedSubscriptionsForTopic != topicName)
        {
            subscriptionDict.Clear();
        }

        try
        {
            var credential = await AuthService.GetTokenCredentialAsync();
            if (credential == null)
            {
                isLoadingSubscriptions = false;
                return;
            }

            var firstItem = true;
            await foreach (var sub in ResourceService.ListSubscriptionsAsync(credential, _state.CurrentNamespace, topicName, ct))
            {
                if (ct.IsCancellationRequested) break;
                
                // Only add if we're still loading for the same topic
                if (selectedTopicName == topicName)
                {
                    subscriptionDict[sub.Name] = sub;
                }
                
                if (firstItem)
                {
                    isLoadingSubscriptions = false;
                    firstItem = false;
                }
                StateHasChanged();
            }
            
            // Mark that we've loaded subscriptions for this topic
            if (!ct.IsCancellationRequested && selectedTopicName == topicName)
            {
                _loadedSubscriptionsForTopic = topicName;
            }
        }
        catch (OperationCanceledException)
        {
            // Expected when switching topics quickly
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading subscriptions: {ex.Message}";
        }
        finally
        {
            isLoadingSubscriptions = false;
            StateHasChanged();
        }
    }

    private void SelectSubscription(string subName)
    {
        _state.SelectSubscription(subName);
        ResetMessageState();
    }

    private void ResetMessageState()
    {
        peekedMessages.Clear();
        hasPeeked = false;
        peekFromSequence = 0;
        // Don't reset isViewingDLQ - user preference should persist across entity switches
        _messageListRef?.ClearSelection();
    }

    private Task PeekMessages() => PeekMessagesAsync(append: false);
    private Task PeekNext() => PeekMessagesAsync(append: true);

    private async Task PeekMessagesAsync(bool append)
    {
        if (append && peekedMessages.Count >= 1000)
        {
            errorMessage = "Maximum of 1000 messages loaded. Use filters or start from a different sequence number.";
            return;
        }

        isPeeking = true;
        errorMessage = null;
        
        if (!append)
        {
            hasPeeked = true;
            peekedMessages.Clear();
            peekFromSequence = 0;
        }
        else if (peekedMessages.Any())
        {
            peekFromSequence = (int)(peekedMessages.Max(m => m.SequenceNumber ?? 0) + 1);
        }

        try
        {
            var token = await AuthService.GetServiceBusTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Service Bus token not available";
                return;
            }

            var messages = await PeekEntityMessagesAsync(token);
            
            if (append)
            {
                peekedMessages.AddRange(messages);
            }
            else
            {
                peekedMessages = messages;
            }

            if (messages.Count > 0)
            {
                var suffix = append ? " more" : "";
                NotificationService.NotifySuccess($"Peeked {messages.Count}{suffix} messages");
            }
            else
            {
                NotificationService.NotifyInfo(append ? "No more messages available." : "No messages found");
            }
        }
        catch (Exception ex)
        {
            errorMessage = FormatPeekError(ex.Message);
            Console.WriteLine($"Peek error: {ex}");
        }
        finally
        {
            isPeeking = false;
        }
    }

    private async Task<List<ServiceBusMessage>> PeekEntityMessagesAsync(string token)
    {
        if (selectedQueueName != null)
        {
            return await JsInterop.PeekQueueMessagesAsync(NamespaceNameOnly, selectedQueueName, token, peekCount, peekFromSequence, isViewingDLQ);
        }
        if (selectedTopicName != null && selectedSubscriptionName != null)
        {
            return await JsInterop.PeekSubscriptionMessagesAsync(NamespaceNameOnly, selectedTopicName, selectedSubscriptionName, token, peekCount, peekFromSequence, isViewingDLQ);
        }
        return new List<ServiceBusMessage>();
    }

    private static string FormatPeekError(string errorMsg)
    {
        errorMsg = errorMsg.Replace("Peek failed: Peek failed:", "Peek failed:");
        
        if (errorMsg.Contains("WebSocket") || errorMsg.Contains("websocket"))
        {
            return $"WebSocket connection failed. This could be due to token expiration (try refreshing) or network issues. Details: {errorMsg}";
        }
        if (errorMsg.Contains("401") || errorMsg.Contains("Unauthorized") || errorMsg.Contains("claim"))
        {
            return $"Permission denied: {errorMsg}";
        }
        return errorMsg;

    private async Task ExecuteBatchOperationAsync(List<long> sequenceNumbers, string operationName, Func<List<long>, Task> operation, bool removeFromView = true)
    {
        ConfirmModal.IsProcessing = true;
        errorMessage = null;

        try
        {
            await operation(sequenceNumbers);
            
            // Remove processed messages from the view and clear selection (only if they were actually removed)
            if (removeFromView)
            {
                peekedMessages.RemoveAll(m => m.SequenceNumber.HasValue && sequenceNumbers.Contains(m.SequenceNumber.Value));
                if (peekedMessages.Count == 0)
                {
                    peekFromSequence = 0;
                }
            }
            _messageListRef?.ClearSelection();
            
            var pastTense = operationName switch
            {
                "delete" => "Deleted",
                "resubmit" => "Resubmitted",
                "move to Dead Letter Queue" => "Moved",
                _ => operationName
            };
            var suffix = operationName == "move to Dead Letter Queue" ? " to Dead Letter Queue" : "";
            NotificationService.NotifySuccess($"{pastTense} {sequenceNumbers.Count} messages{suffix}");
            CloseConfirmModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to {operationName} messages: {ex.Message}";
            Console.WriteLine($"{operationName} error details: {ex}");
        }
        finally
        {
            ConfirmModal.IsProcessing = false;
        }
    }

